{
  "manifest_version": 2,

  "name": "The Pirate Beacon",
  "description": "A tool for navigating the high sees of The Pirate Bay",
  "version": "1.1",

  "icons": {
    "16": "beacon-16.png",
    "48": "beacon-48.png",
    "128": "beacon-128.png"
  },

  "permissions": [
    "http://www.imdbapi.com/",
    "http://img.omdbapi.com/",
    "http://trailersapi.com/"
  ],
  "web_accessible_resources": [
    "img/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://thepiratebay.se/*", "*://194.71.107.80/*"],
      "js": ["jquery.min.js", "piratebay.js"]
    }
  ]
}